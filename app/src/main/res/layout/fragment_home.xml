<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@android:style/Widget.DeviceDefault.Light.ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true"
    android:scrollbarStyle="insideOverlay"
    android:visibility="visible">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.HomeFragment">

        <Button
            android:id="@+id/button4"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="35dp"
            android:text="Expenses"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/staffexpenses_icon"
            app:layout_constraintBottom_toTopOf="@+id/button5"
            app:layout_constraintEnd_toStartOf="@+id/button3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/check_in_out" />

        <Button
            android:id="@+id/button5"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginStart="33dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="32dp"
            android:text="File Returns"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/filereturns_icon"
            app:layout_constraintBottom_toTopOf="@+id/button7"
            app:layout_constraintEnd_toStartOf="@+id/button6"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button4" />

        <Button
            android:id="@+id/check_in_out"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginStart="33dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="27dp"
            android:layout_marginBottom="33dp"
            android:text="Check In and Out"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/checkinout_icon"
            app:layout_constraintBottom_toTopOf="@+id/button4"
            app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="33dp"
            android:text="APPLY FOR LEAVE"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/leave_icon"
            app:layout_constraintBottom_toTopOf="@+id/button3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/check_in_out"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button7"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginBottom="173dp"
            android:text="help/reset"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/help_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/button5"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button5" />

        <Button
            android:id="@+id/button3"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="34dp"
            android:text="Replace Staff ID"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/replaceid_icon"
            app:layout_constraintBottom_toTopOf="@+id/button6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button4"
            app:layout_constraintTop_toBottomOf="@+id/button2" />

        <Button
            android:id="@+id/button6"
            android:layout_width="160dp"
            android:layout_height="100dp"
            android:layout_marginEnd="33dp"
            android:layout_marginBottom="305dp"
            android:text="kra mail"
            android:textSize="14sp"
            app:cornerRadius="10dp"
            app:icon="@drawable/kramail_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button5"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>